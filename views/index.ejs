<%- include("partials/header.ejs")%>

<div class="container my-5">
    <div class="p-5 text-center rounded-3 mb-5 p-5" style="background-color: #B4D4FF; min-height: 70vh;">
        <div class="container mt-5">

            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="#176B87" class="bi bi-cloud-sun-fill" viewBox="0 0 16 16">
                <path d="M11.473 11a4.5 4.5 0 0 0-8.72-.99A3 3 0 0 0 3 16h8.5a2.5 2.5 0 0 0 0-5z"/>
                <path d="M10.5 1.5a.5.5 0 0 0-1 0v1a.5.5 0 0 0 1 0zm3.743 1.964a.5.5 0 1 0-.707-.707l-.708.707a.5.5 0 0 0 .708.708zm-7.779-.707a.5.5 0 0 0-.707.707l.707.708a.5.5 0 1 0 .708-.708zm1.734 3.374a2 2 0 1 1 3.296 2.198q.3.423.516.898a3 3 0 1 0-4.84-3.225q.529.017 1.028.129m4.484 4.074c.6.215 1.125.59 1.522 1.072a.5.5 0 0 0 .039-.742l-.707-.707a.5.5 0 0 0-.854.377M14.5 6.5a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1z"/>
              </svg>

        </div>
      <h1 class=" mt-5" style="color: #176B87; font-weight: 700;">Weather LookUp</h1>
      <div class="container my-5 text-center p-3 rounded-3" style="background-color: #EEF5FF; border:3px solid #176B87; max-width: 500px;">

        <div class="container p-2" style=" min-width: 300px; text-align: left;">
            <form action="/location" method="GET">
                <div class="mt-3">
                    <label><h5>API-Key : </h5></label>
                    <input type="password" name="key" required style="background-color: #EEF5FF; width: 20rem; border: 2px solid #000000;" placeholder="Enter Your API Key"><br>
                    <p style="font-size: x-small; color: red;">*If you don't have an API key click the button "Get Your API Key" to sign-in to an account to create one.</p>                
                </div>
                <div class="mt-3">
                    <label><h5>Location : </h5></label>
                    <input type="text" name="location" required style="background-color: #EEF5FF; width: 20rem; border: 2px solid #000000;" placeholder="Enter City Name to LookUp"><br>
                </div>
                <div class="mt-3 mb-3" style="text-align: center;">
                    <button type="submit"  class="btn btn-primary text-center rounded-pill btn-lg" style="font-weight: 700;" >
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentcolor" class="bi bi-search mb-1 me-1" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                      </svg>
                      LookUp
                    </button>
                </div>
            </form>
        </div>

      </div>
    </div>
  </div>

